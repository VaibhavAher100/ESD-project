<div class="form-group">

  <label for="title"> Title </label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">

  <label for="author"> Author </label>
  <input required value="<%= article.author %>" type="text" name="author" id="author" class="form-control">

  <label for="description"> Description</label>
  <textarea name="description" id="description" class="form-control">
    <%= article.description %>
  </textarea>
  
  <label for="markdown"> article link </label>
  <textarea required name="markdown" id="markdown" class="form-control">
    <%= article.markdown %>
  </textarea>

</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/articles" class="btn btn-secondary">Cancel</a>